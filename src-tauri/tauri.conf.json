{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "docker-tauri",
  "version": "0.1.0",
  "identifier": "com.marcos.docker-tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "transparent": true,
        "title": "docker-tauri",
        "minHeight": 800,
        "minWidth": 1024,
        "maxWidth": 1920,
        "maxHeight": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
